{
    "files.associations": {
        "*.py": "python",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "*.c": "cpp",
        "*.h": "cpp",
        "systemc": "cpp"
    },
    "files.eol": "\n",
    "pylint.args": [
        "--disable=C0111,C0103,W1203,W1201,C0301",
        "--max-line-length=110"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/amba_chi/include",
        "/scratch/users/${env:USER}/.conan2/**"
    ],
    "C_Cpp.default.recursiveIncludes.order": "depthFirst",
    "C_Cpp.default.recursiveIncludes.priority": "afterSystemIncludes",
    "C_Cpp.default.recursiveIncludes.reduce": "default",
    "C_Cpp.codeAnalysis.clangTidy.checks.enabled": ["*"],
}
